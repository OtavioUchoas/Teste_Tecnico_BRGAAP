{
    "_version": "1.9.0",
    "sap.app": {
        "_version": "1.2.0",
        "id": "root",
        "type": "application",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}"
    },
    "sap.ui": {
        "_version": "1.3.0",
        "technology": "UI5",
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        },
        "supportedThemes": []
    },
    "sap.ui5": {
        "dependencies": {
            "minUI5Version": "1.108.0",
            "libs": {
                "sap.ui.core": {},
                "sap.m": {}
            }
        },
        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleName": "root.i18n.i18n",
                    "supportedLocales": [
                        "pt_BR"
                    ],
                    "fallbackLocale": "pt_BR"
                }
            },
            "invoice": {
                "type": "sap.ui.model.json.JSONModel",
                "uri": "Invoices.json"
            }
        },
        "rootView": {
            "viewName": "root.view.App",
            "type": "XML",
            "id": "app"
        },
        "contentDensities": {
            "compact": true,
            "cozy": true
        },
        "resources": {
            "css": [
                {
                    "uri": "css/style.css"
                }
            ]
        },
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "type": "View",
                "viewType": "XML",
                "path": "root.view",
                "controlId": "app",
                "controlAggregation": "pages"
            },
            "routes": [
                {
                    "pattern": "",
                    "name": "overview",
                    "target": "overview"
                },
                {
                    "pattern": "detail//{invoicePath}",
                    "name": "detail",
                    "target": "detail"
                },
                {
                    "pattern": "tarefasDetail/{tarefaId}",
                    "name": "tarefasDetail",
                    "target": "tarefasDetail"
                }
            ],
            "targets": {
                "overview": {
                    "id": "overview",
                    "name": "Overview"
                },
                "detail": {
                    "id": "detail",
                    "name": "Detail"
                },
                "tarefasDetail": {
                    "id": "tarefasDetail",
                    "name": "tarefas.TarefasDetail"
                }
            }
        }
    }
}